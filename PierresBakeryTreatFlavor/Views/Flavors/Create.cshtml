@{
  Layout = "_Layout";
}

@model PierresBakeryTreatFlavor.Models.Flavor

<h4>Add a new flavor</h4>
@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    @Html.LabelFor(model => model.Description)
    @Html.TextBoxFor(model => model.Description)
    <input type="submit" value="Add new flavor" />
}
<button>@Html.ActionLink("Show all flavors", "Index")</button>
<button>@Html.ActionLink("Home", "Index", "Home")</button>