@{
  Layout = "_Layout";
}

@model PierresBakeryTreatFlavor.Models.Flavor

<h2>Flavor Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

@if (@Model.Treats.Count == 0)
{
  <p>This flavor does not contain any treats</p>
}
else
{
  <h4>Treats the flavor contains:</h4>
  <ul>
  @foreach(var join in Model.Treats)
  {
    <li>@join.Treat.Name</li>
  }
  </ul>
}

<button>@Html.ActionLink("Home", "Index", "Home")</button>
<button>@Html.ActionLink("Back to list", "Index")</button>
<button>@Html.ActionLink("Edit Treat", "Edit", new { id = Model.FlavorId })</button>
<button>@Html.ActionLink("Delete Treat", "Delete", new { id = Model.FlavorId })</button>