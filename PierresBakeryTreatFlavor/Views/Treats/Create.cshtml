@{
  Layout = "_Layout";
}

@model PierresBakeryTreatFlavor.Models.Treat

<h4>Add a new treat</h4>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    @Html.LabelFor(model => model.Description)
    @Html.TextBoxFor(model => model.Description)
    @Html.Label("Select flavor")
    @Html.DropDownList("FlavorId")

    <input type="submit" value="Add new treat" class="btn btn-default" />
}
<button>@Html.ActionLink("Show all treats", "Index")</button>
<button>@Html.ActionLink("Home", "Index", "Home")</button>